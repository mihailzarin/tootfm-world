## Server
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

## Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tootfm?schema=public

## Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Optional, callback is derived from NEXT_PUBLIC_APP_URL in code
# SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback

## Last.fm
LASTFM_API_KEY=your_lastfm_api_key
LASTFM_API_SECRET=your_lastfm_api_secret
# Optional override (defaults to NEXT_PUBLIC_APP_URL + /api/music/lastfm/callback in code)
# LASTFM_CALLBACK_URL=http://localhost:3000/api/music/lastfm/callback

## Worldcoin
NEXT_PUBLIC_WORLD_APP_ID=your_worldcoin_app_id
NEXT_PUBLIC_WORLD_ACTION_ID=verify

## Apple Music (JWT generation)
APPLE_TEAM_ID=your_team_id
APPLE_KEY_ID=your_key_id
# Replace \n with literal newlines when using an actual private key locally
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

## Optional
# SOCKET_PORT=3001
# Copy to .env.local and fill with your values

# Database (Required)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# World ID (Required)
NEXT_PUBLIC_WORLD_APP_ID=app_staging_xxxxx
NEXT_PUBLIC_WORLD_ACTION_ID=verify

# Spotify OAuth (Required)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://tootfm.world/api/spotify/callback

# Optional
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
JWT_SECRET=generate_random_secret_here
